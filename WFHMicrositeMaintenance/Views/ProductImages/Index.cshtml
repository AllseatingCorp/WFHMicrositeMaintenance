@model IEnumerable<WFHMicrositeMaintenance.Models.ProductImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index - @Model.FirstOrDefault().Product</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.FirstOrDefault().ProductId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductOption1Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductOption2Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.ProductImageId != 0)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Option1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Option2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductImageId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductImageId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductImageId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Products" asp-route-id="@Model.FirstOrDefault().ProductId">Back to Product List</a>
</div>
